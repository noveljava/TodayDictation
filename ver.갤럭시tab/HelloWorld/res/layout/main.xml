<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundnon"  >

	<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@android:id/tabhost"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
			
			<TabWidget
				android:id="@android:id/tabs"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			
			<FrameLayout
				android:id="@android:id/tabcontent"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">
				 
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:id="@+id/view1"
					android:orientation="vertical">
					 
					<LinearLayout android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:id="@+id/playView"
						android:orientation="horizontal">
						
					    <ImageButton
					        android:id="@+id/btnImgP_Pre"
							android:layout_width="50dp"
						  	android:layout_height="50dp"
						  	android:background="@drawable/pre_ten_button" 
					        />
					    
						<ToggleButton android:id="@+id/toggleButton01" 
							  android:layout_width="50dp" 
							  android:layout_height="50dp" 
							  android:textOff="" 
							  android:textOn=""
							  android:background="@drawable/pause_button"/>
						
					    <ImageButton
					        android:id="@+id/btnImgP_Stop"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:background="@drawable/stop_button" />
	
					    <ImageButton
					        android:id="@+id/btnImgP_Post"
							android:layout_width="50dp"
						  	android:layout_height="50dp"
						  	android:background="@drawable/post_ten_button" 
					        />

					    <Button
					        android:id="@+id/showAnswer"
					        android:layout_width="120dp"
					        android:layout_height="50dp"
					        android:layout_marginLeft="900dp"
					        android:text="정답확인" />

					</LinearLayout>
				    <SeekBar
				        android:id="@+id/SeekBar01"
				        android:layout_height="wrap_content"
				        android:layout_width="fill_parent"
					/>

				    
					<TextView android:id="@+id/content"
						android:layout_height="wrap_content"
						android:layout_width="fill_parent"
						android:textColor="@android:color/white"
						android:textSize="20dp"
						android:inputType="none"
						android:textIsSelectable="true"
						android:paddingLeft="10dp"
						android:paddingRight="10dp"
						></TextView>
					 
				</LinearLayout>
				
				<LinearLayout android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:id="@+id/wordView">
					<TextView android:id="@+id/wordTextView"
							android:layout_height="wrap_content"
							android:layout_width="fill_parent"
							android:paddingLeft="10dp"
							android:paddingRight="10dp"
							android:textSize="20dp"
							android:textColor="@android:color/white"
							></TextView>
	
				</LinearLayout>
			</FrameLayout>
		</LinearLayout>
	</TabHost>
	
</RelativeLayout>